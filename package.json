{
    "name": "cerberus",
    "version": "0.1.0",
    "description": "The Cerberus IAM Platform.",
    "private": true,
    "license": "MIT",
    "author": {
        "name": "Jerome Thayananthajothy",
        "email": "tjthavarshan@gmail.com"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "npm run start:dev",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./tests/jest-e2e.json --verbose",
        "check": "npm run lint && npm run build && npm run test && npm run test:e2e",
        "docker:setup": "chmod +x ./bin/docker.sh && ./bin/docker.sh"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.5",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.5",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/mongoose": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.5",
        "@nestjs/terminus": "^10.0.1",
        "@nestjs/typeorm": "^10.0.0",
        "@sendgrid/mail": "^7.7.0",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "fs": "^0.0.1-security",
        "iconv-lite": "^0.6.3",
        "lodash": "^4.17.21",
        "mongoose": "^7.3.2",
        "mysql2": "^3.4.5",
        "nest-winston": "^1.9.3",
        "path": "^0.12.7",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "slug": "^8.2.2",
        "slugify": "^1.6.6",
        "typeorm": "^0.3.17",
        "validator": "^13.9.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.7",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.0.5",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.5",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.2",
        "@types/lodash": "^4.14.195",
        "@types/node": "20.3.3",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "chai": "^4.3.7",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "29.6.0",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.1.6"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "engines": {
        "node": ">=16"
    }
}
